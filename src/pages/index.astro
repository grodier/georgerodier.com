---
import {Image, Font} from "astro:assets"
import { getCollection } from "astro:content";
import "../styles/styles.css"
import profilePic from "@images/LH_profile_square.jpg"
import {sortedTimeDescending} from "@utils/postUtils"

let posts = await getCollection("posts");
let sortedPosts = sortedTimeDescending(posts);

let latestPost = sortedPosts[0];
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <Font cssVariable="--font-synonym" preload />
    <Font cssVariable="--font-lora" preload />
    <link 
      rel="alternate"
      type="application/rss+xml"
      title="George Rodier's blog"
      href={new URL("rss.xml", Astro.site)}
    />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <title>George Rodier</title>
  </head>
