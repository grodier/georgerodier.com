---
import { getCollection } from "astro:content";
import { Font } from "astro:assets";
import "../styles/home.css";
import "../styles/article.css";
import { formatDate } from "@utils/timeUtils";

// Get all posts sorted by date
let posts = await getCollection("posts");
posts.sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime());
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <Font cssVariable="--font-synonym" preload />
    <!-- Google Fonts - Lora for body text -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,600;1,400&display=swap" rel="stylesheet">
    <title>Blog | George Rodier</title>
  </head>
  <body>
    <!-- Site Header -->
    <header class="site-header">
      <div class="container header-container">
        <a href="/" class="site-name">George Rodier</a>
        <nav class="site-nav">
          <a href="/posts" class="nav-link">Blog</a>
          <a href="/subscribe" class="nav-link">Subscribe</a>
        </nav>
      </div>
    </header>

    <main class="container blog-container">
      <header class="page-header">
        <h1 class="page-title">Blog</h1>
        <p class="page-description">Thoughts on software engineering, building products, and delivering value.</p>
      </header>

      <ul class="post-list" role="list">
        {posts.map((post) => (
          <li class="post-item">
            <a href={`/posts/${post.id}`} class="post-link">
              <time datetime={post.data.pubDate.toISOString()} class="post-date">
                {formatDate(post.data.pubDate)}
              </time>
              <h2 class="post-title">{post.data.title}</h2>
              <p class="post-description">{post.data.description}</p>
            </a>
          </li>
        ))}
      </ul>
    </main>
  </body>
</html>
